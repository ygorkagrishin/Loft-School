.review__row
    display: flex;
    flex-wrap: wrap;
    height: 100%;

.review__elem
    flex: 1 0 25%;    

.review__review
    height: 100%;

.review__bg
    background-repeat: no-repeat;
    background-position: top;
    background-size: cover;
    height: 100%;
    filter: grayscale( 100 );   

.review__trigger
    position: relative;
    height: 100%;

.review__hover
    position: absolute;
    top: 0;
    left: 0;
    display: none;
    width: 100%;
    height: 100%;
    padding: 41px 21px;
    background-color: rgba( primaryBlack,.7 );

.review__trigger:hover > .review__hover
    display: block;    

.review__title
    margin-bottom: 15px;
    font: 14px / 28px gagalinregular;
    color: primaryWhite;            

.review__helper
    margin-bottom: 11px;

.review__text
    font: 14px / 24px ubuntulight;
    color: primaryWhite; 

.review__btn > .btn__read
    display: none;

.review__popup
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999999;
    width: 100%;
    height: 100%;
    background-color: rgba( primaryBlack,.9 );

.review__popup-row
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;

.review__popup-cont
    position: relative;
    width: 61%;
    padding: 24px 20px;
    background-color: primaryWhite;
    border-radius: 5px; 

.review__popup-title
    margin-bottom: 12px;
    font: 14px / 28px gagalinregular;

.review__popup-text
    font: 14px / 24px ubuntulight;   

.review__popup-close
    position: absolute;
    top: 8.5%;
    right: 4%;
    z-index: 999;
    cursor: pointer;

.review__popup_visibility_false
    display: none;

.review__popup_visibility_true
    display: block;    