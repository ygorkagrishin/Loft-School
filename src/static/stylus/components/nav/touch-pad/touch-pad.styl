.js-nav__container
    @media screen and ( max-width 768px )
        position: fixed;
        display: none;
        top: 0;
        left: 0;
        z-index: 9999;
        width: 100%;
        height: 100%;

.nav__list
    @media screen and ( max-width 768px )
        position: relative;
        height: 100%;
        flex-direction: column;
        justify-content: center;
        background-color: primaryBlack;

.nav__list_pos_relative
    @media screen and ( max-width 768px )
        position: relative;

    @media screen and ( max-width 768px )
        display: flex;                

.nav__item_after_spot::after
    @media screen and ( max-width 768px )
        display: block;
        margin: 0 auto;

.nav__link
    @media screen and ( max-width 768px )
        margin: 15px 0;

.js-nav__container.active
    @media screen and ( max-width 768px )
        display: block;          