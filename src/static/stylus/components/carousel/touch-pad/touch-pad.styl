.caro__slide
    @media screen and ( max-width 768px )
        flex-direction: column;
        text-align: center;

.caro__slide > .caro__col_size_md:not( :last-child )
    @media screen and ( max-width 768px )
        margin: 0;

.caro__col_size_md
    @media screen and ( max-width 768px )
        width: 78%;

.caro__burger
    @media screen and ( max-width 768px )
        padding: 70px 0 26px 0;

.caro__pic
    @media screen and ( max-width 768px )
        width: 90%;

.caro__cont
    @media screen and ( max-width 768px )
        align-self: center;

.caro__title
    @media screen and ( max-width 768px )
        padding-bottom: 16px;

.caro__text
    @media screen and ( max-width 768px )
        padding-bottom: 32px;

.caro__footer
    @media screen and (  max-width 768px )
        justify-content: center;

.caro__footer > .caro__col:not( :last-child )
    @media screen and ( max-width 768px )
        margin-right: 30px;

.caro__arrow-prev
    @media screen and ( max-width 768px )
        left: 2.5%;

.caro__arrow-next
    @media screen and ( max-width 768px )
        right: 2.5%;