.acco
    @media screen and ( max-width 768px )
        max-width: 370px;
        margin: 0 auto;

.acco__name
    @media screen and ( max-width 768px )
        font-size: 24px;
        line-height: 36px;

.acco__header
    @media screen and ( max-width 768px )
        justify-content: center;

.acco__cont
    @media screen and ( max-width 768px )
        flex-direction: column;
        align-items: center;
        text-align: center;

.acco__helper
    @media screen and ( max-width 768px )
        padding: 0;  

.acco__post
    @media screen and ( max-width 768px )
        margin: 14px 0;              