*
    padding: 0;
    margin: 0;
    box-sizing: border-box;

.fullPage
    min-height: 100vh;

.page
    height: 100vh; 

.section
    height: 100vh;

.section__heading
    font: 72px / 64px gagalinregular;

.container
    width: 95%;
    max-width: 940px;
    height: 100%;
    margin: 0 auto;

.wrap-cont
    width: 100%;
    min-height: 650px;
    @media screen and ( max-width 768px )
        height: 100%; 

ul
    li
        list-style: none;

h1, h2, h3, h4, h5, h6
    margin: 0;

a
    text-decoration: none; 

.text
